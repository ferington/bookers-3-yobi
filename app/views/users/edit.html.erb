<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm0 mx-autor">
      <h2>User info</h2>
        <% if @user.errors.any? %>
        <%= @user.errors.count %>errors
        <ul>
          <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>

        <%= form_with model: @user do |f| %>
        <div>
        <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName"%>
        </div>
        <div>
        <label for="inputImage">Image</label><br>
          <%= f.file_field :profile_image, placeholder: "image", accept: "image/*" %>
        </div>
        <div>
        <label for="Inputintroduction">Introduction</label><br>
          <%= f.text_field :introduction, autofocus: true, id:"introduction"%>
        </div>
        <br>
        <div>
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
        <% end %>
    </div>
  </div>
</div>


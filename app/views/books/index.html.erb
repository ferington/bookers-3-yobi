<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= flash[:notice]%>
      <%= render 'users/post', user: @user %>
      <%= render 'list', book: @book %>
    </div>
       <div class="col-md-8 offset-md-1">
        <table class="table book-index">
          <h2>Books</h2>
            <thead>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= link_to user_path(book.user) do %>
                      <%= image_tag book.user.get_profile_image(80,80) %>
                    <% end %>
                  </td>
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td> <%=book.body %></td>
                </tr>
              <% end %>
            </tbody>
        </table>
      </div>
  </div>
</div>

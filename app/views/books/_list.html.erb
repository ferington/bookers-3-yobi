
<h4>New book</h4>

<%= form_with model: book do |f| %>
  <table class="table table-striped">
  <h4>Title</h4>
    <%= f.text_field :title %>

  <h4>Opinion</h4>
    <%= f.text_area :body %>
  <table>
    <div class: "btn btn-success">
      <%= f.submit 'Create Book', class: "btn btn-success"%>
    </div>
    </table>
<% end %>





